@model User
<html>
<head>
    <title>Login</title>
    <link rel="icon" type="image/png" href="images/icon.png">
</head>
<body>
    <header class="header">
        <a href="~/index"><img src="~/images/logo.png" alt="Logo" class="logo"></a> 
    </header>
    <div class="login-container">
        <form action="~/main/dashboard" method="post">
            <input type="email" id="email" name="email" placeholder="Email" required class="input-field">
            <input type="password" id="password" name="password" placeholder="Password" required class="input-field">
            <input type="submit" value="Login" class="login-button">
        </form>
    </div>
    <div class="image-container">
        <img src="~/images/loginImg.png" alt="Descriptive text">
    </div>
</body>
</html>